#include<stdio.h>
void count1s0s(int n)
{
    int i=0,arr[10],count1=0,count0=0;
    while(n>0)
    {
        arr[i]=n%2;
        n=n/2;
        i++;
    }
     printf("given number in binary:");
    for(int j=i-1;j>=0;j--)
        printf("%d",arr[j]);
    for(int j=i-1;j>=0;j--)
    {
        if(arr[j]==1)
            count1++;
        else
        count0++;
    }
    printf("\ncount 1s in a integer is %d\n",count1);
    printf("count 0s in a integer is %d",count0);
    
}
int main()
{
    void(*fptr)(int)=count1s0s;
    fptr(10);
    return 0;
}
