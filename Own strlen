#include<stdio.h>
#include<string.h>
int str_len(char *str1)
{
    int i,count=0;
    for(i=0;str1[i]!='\0';i++)
    {
        count++;
    }
    return count;
}
int main()
{
    char str1[20];
    printf("enter the str1");
    scanf("%s",str1);
    printf("length of str1: %d",str_len(str1));
    return 0;
}
