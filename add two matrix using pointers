#include<stdio.h>
void main()
{
    int n,m;
    printf("enter m and n:");
    scanf("%d %d",&m,&n);
    int a[m][n],b[m][n],c[m][n],i,j;
    
    printf("Enter matrix1:");
    for(i=0;i<m;i++)
    {
        for(j=0;j<n;j++)
        {
            scanf("%d ",(*(a+i)+j));
        }
    }
    printf("Enter matrix2:");
    for(i=0;i<m;i++)
    {
        for(j=0;j<n;j++)
        {
            scanf("%d ",(*(b+i)+j));
        }
    }
    printf("\nAddition matrix:\n");
    for(i=0;i<m;i++)
    {
        for(j=0;j<n;j++)
        {
            *(*(c+i)+j)=*(*(a+i)+j)+*(*(b+i)+j);
            printf("%d  ",*(*(c+i)+j));
        }
        printf("\n");
    }
}
