#include<stdio.h>
void length(char str[])
{
   
    printf("enter string:");
    fgets(str,50,stdin);
    char *ptr=str;
    int count=0;       
    while(*ptr!='\0' || *ptr==32)
    {
        count++;
        ptr++;
    }  
    count--;
    printf("Length of string= %d",count);
}
int main()
{
 char str[100];
 void (*fptr)(char [100])=length;
 fptr(str);
 return 0;
 }
