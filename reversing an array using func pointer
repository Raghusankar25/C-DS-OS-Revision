#include<stdio.h>
void rev(int arr[], int n)
{
    int temp;
    for(int i=0;i<n;i++)
    {
        printf("arr[%d] = ", i);
        scanf("%d",(arr+i));
    }
    printf("\noriginal array:\n");
    for(int i=0;i<n;i++)
        printf("%d ", *(arr+i));
        
    for(int i=0;i<n/2;i++)
    {
        temp=*(arr+i);
        *(arr+i)=*(arr+n-1-i);
        *(arr+n-1-i)=temp;
    }
    printf("\nreveresed array:\n");
    for(int i=0;i<n;i++)
        printf("%d ", *(arr+i));
    
}
int main()
{
    int arr[10],n,temp;
    printf("enter no of elements:");
    scanf("%d",&n);
    printf("enter elements in an array:\n");
    void(*fptr)(int [],int)=rev;
    fptr(arr,n);
    return 0;
}
